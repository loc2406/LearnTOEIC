<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.locnguyen.toeicexercises.fragment.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_wordFragment"
            app:destination="@id/wordFragment" />
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/introFragment"
        android:name="com.locnguyen.toeicexercises.fragment.IntroFragment"
        android:label="IntroFragment"
        tools:layout="@layout/intro_fragment">
        <action
            android:id="@+id/action_introFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/introFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/wordFragment"
        android:name="com.locnguyen.toeicexercises.fragment.word.WordFragment"
        android:label="WordFragment"
        tools:layout="@layout/word_fragment" >
        <action
            android:id="@+id/action_wordFragment_to_listMeansFragment"
            app:destination="@id/listMeansFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.locnguyen.toeicexercises.fragment.exam.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/detail_fragment">
        <action
            android:id="@+id/action_detailFragment_to_scoreFragment"
            app:destination="@id/scoreFragment" />

    </fragment>
    <fragment
        android:id="@+id/scoreFragment"
        android:name="com.locnguyen.toeicexercises.fragment.exam.ScoreFragment"
        android:label="ScoreFragment"
        tools:layout="@layout/score_fragment">
        <action
            android:id="@+id/action_scoreFragment_to_listAnswersFragment"
            app:destination="@id/listAnswersFragment" />
    </fragment>
    <fragment
        android:id="@+id/listAnswersFragment"
        android:name="com.locnguyen.toeicexercises.fragment.exam.ListAnswersFragment"
        android:label="ListAnswersFragment"
        tools:layout="@layout/list_answers_fragment">
        <action
            android:id="@+id/action_listAnswersFragment_to_answerFragment"
            app:destination="@id/answerFragment" />
    </fragment>
    <fragment
        android:id="@+id/answerFragment"
        android:name="com.locnguyen.toeicexercises.fragment.exam.AnswerFragment"
        android:label="AnswerFragment"
        tools:layout="@layout/answer_fragment">

        <argument
            android:name="questionPosition"
            app:argType="integer"
            app:nullable="false" />

        <argument
            android:name="question"
            app:argType="com.locnguyen.toeicexercises.model.Question"
            app:nullable="false" />

        <argument
            android:name="userAnswer"
            app:argType="string"
            app:nullable="true"/>

        <argument
            android:name="isShowAnswer"
            app:argType="boolean"
            app:nullable="false"/>
    </fragment>
    <fragment
        android:id="@+id/listMeansFragment"
        android:name="com.locnguyen.toeicexercises.fragment.word.ListMeansFragment"
        android:label="ListMeansFragment"
        tools:layout="@layout/list_means_fragment">

        <argument
            android:name="word"
            app:argType="com.locnguyen.toeicexercises.model.Word"
            app:nullable="false"/>

    </fragment>



</navigation>