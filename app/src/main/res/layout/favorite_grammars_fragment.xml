<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_device"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_space"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_primary_rectangle_no_stroke_20dp_botstart_botend_corners"
        android:paddingVertical="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:importantForAccessibility="no"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back_white"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/title" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="44dp"
            android:fontFamily="@font/tinos_bold"
            android:gravity="center"
            android:text="@string/Grammar_note"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ic_back"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favorite_grammars"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/dont_have_data_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Dont_have_favorite_grammar"
        android:textSize="@dimen/small_title"
        android:textColor="@color/black"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@id/favorite_grammars"
        app:layout_constraintTop_toTopOf="@id/favorite_grammars"
        app:layout_constraintEnd_toEndOf="@id/favorite_grammars"
        android:gravity="center"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>