<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Practice"
            android:textSize="@dimen/medium_title"
            android:textColor="@color/white"
            android:fontFamily="@font/tinos_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_primary_rectangle_no_stroke_20dp_botstart_botend_corners"
            android:gravity="center"
            android:paddingVertical="15dp"/>

        <TextView
            android:id="@+id/theory_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Theory"
            android:textSize="@dimen/big_content"
            android:textColor="@color/black"
            android:fontFamily="@font/tinos_bold"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="@id/title"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/theory_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_theory"
            tools:itemCount="1"
            android:scrollbars="none"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/theory_title"
            app:layout_constraintEnd_toEndOf="@id/theory_title"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/exercise_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Exercise"
            android:textSize="@dimen/big_content"
            android:textColor="@color/black"
            android:fontFamily="@font/tinos_bold"
            app:layout_constraintStart_toStartOf="@id/theory_title"
            app:layout_constraintTop_toBottomOf="@id/theory_content"
            app:layout_constraintEnd_toEndOf="@id/theory_title"
            android:layout_marginTop="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/exercise_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            tools:itemCount="1"
            tools:listitem="@layout/item_exercise"
            app:layout_constraintTop_toBottomOf="@id/exercise_title"
            app:layout_constraintEnd_toEndOf="@id/exercise_title"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/note_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Note"
            android:textSize="@dimen/big_content"
            android:textColor="@color/black"
            android:fontFamily="@font/tinos_bold"
            app:layout_constraintStart_toStartOf="@id/theory_title"
            app:layout_constraintTop_toBottomOf="@id/exercise_content"
            app:layout_constraintEnd_toEndOf="@id/theory_title"
            android:layout_marginTop="20dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/note_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/theory_title"
            tools:itemCount="2"
            tools:listitem="@layout/item_note"
            app:layout_constraintTop_toBottomOf="@id/note_title"
            app:layout_constraintEnd_toEndOf="@id/theory_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>