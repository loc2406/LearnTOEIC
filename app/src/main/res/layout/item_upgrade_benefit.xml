<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ic_benefit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tool:src="@drawable/ic_no_ads"
        android:scaleType="centerInside"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/benefit_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tool:text="Tiêu đề"
        android:textSize="@dimen/medium_title"
        android:textColor="@color/black"
        android:fontFamily="@font/tinos_bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_benefit"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/benefit_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tool:text="Nội dung"
        android:textSize="@dimen/small_title"
        android:textColor="@color/black"
        android:fontFamily="@font/tinos_italic"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:maxLines="2"
        android:lineSpacingExtra="5dp"
        app:layout_constraintTop_toBottomOf="@id/benefit_title"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>